<head>
    <meta charset="utf-8">

<h1>レイド登録</h1>
<body>
    <%= form_tag("create") do %>
        <p>
          ポケモン<br>
          <%= collection_select(@pokemon, :pokemon_id, @pokemons, :id, :name) %>
          <a href="../../pokemon/new">ポケモン追加</a><br>
          場所<br>
          <%= collection_select(@place, :place_id, @places, :id, :name) %>
          <a href="../../place/new">場所追加</a><br>
          時間<br>
          <input type="datetime-local" name="date"><%= @raid.date %></input><br>
          一言<br>
          <textarea name="comment"><%= @raid.comment %></textarea><br>
          <input type="submit" value="保存する">
        </p>
    <% end %>


</body>
