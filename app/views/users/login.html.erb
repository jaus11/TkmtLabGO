<head>
    <meta charset="utf-8">
</head>

<h1>ログイン</h1>

  <%= form_for(:session, url: login_path) do |f| %>

    <p>
        <%= f.label :name_id, "ID" %><br>
        <%= f.text_field :name_id %>
    </p>
    <p>
        <%= f.label :password, "パスワード" %><br>
        <%= f.password_field :password %>
    </p>

  <%= f.submit 'ログインする' %>

<% end %>
