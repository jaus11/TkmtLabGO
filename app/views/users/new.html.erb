<!DOCTYPE html>
<html lang="jp">
    <head>
        <meta charset="utf-8">
        <title>Create User</title>
    </head>
    <body>
        <%= form_for(@user, url: user_create_path, method: :post) do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
        <p>
            <%= f.label :name_id, "ID(4文字以上)" %><br>
            <%= f.text_field :name_id %>
        </p>
        <p>
            <%= f.label :password, "パスワード(8文字以上16文字以下)" %><br>
            <%= f.password_field :password %>
        </p>
        <p>
            <%= f.label :comment, "ひとこと" %><br>
            <%= f.text_field :comment %>
        </p>
        <%= f.submit "登録する"%>
        <% end %>
    </body>
</html>
